div(style='text-align:center;margin-top:10px')
    if (typeof user !== "undefined")
        form(action='/terms', method='POST')
            div.row
                div.col-xs-2
                div.col-xs-2
                    input.form-control.form-style(type='text', name='name', maxlength="25", value='#{name}', required)
                div.col-xs-5
                    input.form-control.form-style(type='text', autofocus='autofocus', name='description', maxlength="100", placeholder='A short description of this term.',required)
                div.col-xs-2
                    input.btn.btn-normal(type='submit', value='Create')
    else
        p New term creation is disabled for anonymous users to prevent abuse of the site
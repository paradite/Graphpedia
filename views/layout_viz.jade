doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/tree.css')
    script(src='/bootstrap/js/jquery.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/d3/d3.min.js')
    script(src='/d3/tree.js')
    script(src='/d3/wikiurl.js')
    link(rel='stylesheet', href='/select2/select2.css')
    script(src='/select2/select2.min.js')
    script(src='/select2/form.js')
    link(rel='stylesheet', href='/purecss/menus-min.css')
    script(src='/collapse/collapse.js')

  body
    include header_bar
    div.main
        block content
    include footer


    div.pure-menu.pure-menu-open#menu
        a.pure-menu-heading Recent searches
        if terms.length
            ul.pure-menu
                for term in terms
                    li
                        a(href='/terms/#{term.id}') #{term.name}
        else
            p There are no terms currently.
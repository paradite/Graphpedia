doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/tree.css')
    script(src='/bootstrap/js/jquery.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/d3/d3.min.js')
    script(src='/d3/tree.js')
    script(src='/d3/wikiurl.js')
    link(rel='stylesheet', href='/select2/select2.css')
    script(src='/select2/select2.js')
    script(src='/select2/form.js')
    link(rel='stylesheet', href='/purecss/menus-min.css')
        
  body
    include header_bar
    block content
    include footer


    div.pure-menu.pure-menu-open#menu
        a.pure-menu-heading Hot searches
        if terms.length
            ul
                for term in terms
                    li
                        a(href='/terms/#{term.id}') <span class='text-highlight'>#{term.name}</span>
        else
            p There are no terms currently.
                

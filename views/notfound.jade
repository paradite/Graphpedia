extends layout

block content
    div.before-main
        form(action='/search', method='POST')
            div.row.search-bar
                div.col-xs-6
                    input.form-control.input-lg(type='text', name='name', placeholder='Search a term', required)
                div.col-xs-1
                    input.btn.btn-lg.btn-default(type='submit', value='Graphedia')

    div.main
        p The term <span class='text-highlight'>#{name}</span> does not exist yet.
        p Would you like to create the term <span class='text-highlight'>#{name}</span> ?

        form(action='/terms', method='POST')
            p Create a new term:
            div.row
                div.col-xs-2
                    input.form-control(type='text', name='name', value='#{name}', required)
                div.col-xs-4
                    input.form-control(type='text', autofocus='autofocus', name='description', placeholder='A short description of this term.',required)
                div.col-xs-1
                    input.btn(type='submit', value='Create')

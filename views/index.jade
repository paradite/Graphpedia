extends layout

block content
    div.before-main
        img.bgi(src="http://www.starrynightphotos.com/constellations/images/musca.jpg")
    div.main
        form.form-inline.search-bar(action='/search', method='POST')
            input.input-large(type='text', name='name', placeholder='Search a term', class="form-control", required)
            input(type='submit', value='Graphedia', class="btn btn-default")

    div.after-main
        h1= title
        p.
            Visualize Terms
            with relationships
        p
            strong
                | Browse All:&nbsp;
                a(href='/terms') View all terms
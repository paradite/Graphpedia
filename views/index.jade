extends layout

block content
    
    //- div.before-main
    //-     img.bgi(src="http://www.starrynightphotos.com/constellations/images/musca.jpg")
    div.before-main
        form(action='/search', method='POST')
            div.row.search-bar.vertical-center
                div.col-xs-6
                    input.form-control.input-lg(type='text', name='name', autofocus="autofocus", placeholder='Search a term', required)
                div.col-xs-1
                    input.btn.btn-lg.btn-default(type='submit', value='Graphedia')
        div.row(style='padding-top:5px')
            div.col-xs-8
                p(align='center', style='padding-top:5px') Graphedia provides a graph visualization of related terms.
            div.col-xs-1
                a.btn.btn-default(href='http://www.youtube.com') Video demo
        div.row.index-footer
            p(align='center') Copyright &copy; 2014 Graphedia | By Zhu Liang & Li Dongyan



extends layout_index

block content
    p(style='padding-top:75px; padding-left: 25px')
        a.text-highlight(href='/terms') View all terms
    form(action='/search', method='POST')
        div.row.search-bar.vertical-center
            div.col-xs-3
            div.col-xs-6
                input.form-control.input-lg.input-lg-style(type='text', name='name', autofocus="autofocus", placeholder='Search a term', required)
            div.col-xs-3
                input.btn.btn-lg.btn-header(type='submit', value='Search')
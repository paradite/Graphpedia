extends layout_index

block content
    //- p(style='padding-top:75px; padding-left: 25px')
    //-     a.text-highlight(href='/terms') View all terms
    //-     a.text-highlight(href='/random_term') random term
    form(action='/search', method='POST')
        div.row.search-bar.vertical-center
            div.col-xs-3
            div.col-xs-6
                input.form-control.input-lg.input-lg-style.form-style(type='text', name='name', autofocus="autofocus", placeholder='Search a term', required)
            div.col-xs-3
                input.btn.btn-lg.btn-header(type='submit', value='Search')

    div.index-main
        p I would like to add a new relationship:
        form(action='/terms/#{random_term_1.id}/custom', method='POST')
            div.col-xs-3
                p #{random_term_1.name}
            div.col-xs-4
                label(style="width: 100%;")
                    select.form-style(name='relationship[name]', required, id='e1', style="width: 100%;")
                        option(id='select-control')
                        for type in relationship_types
                            option(id='select-control', value='#{type}') #{type}
            div.col-xs-3
                p #{random_term_2.name}
            div.col-xs-2
                a.btn.btn-normal(type='submit', value='Add')
